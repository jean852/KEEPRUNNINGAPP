<div class="challenge-showpage mt-5">

  <div class="scroll-card bg-white shadow">
    <div class="scroll-card-title p-1">
      <h6><span style="color:#FEFF00;">/ </span>Challenge #<%= @challenge.id  %></h6>
    </div>

    <div class="scroll-card-info ">
      <p>Running 185km from 01/10/2022 to 31/12/2022</p>

      <div class="challenge-details mt-3">

        <div class="challenge-detail-block pl-2 text-left">
          <p class="mb-2">Challenge Type: <span class="badge"><%= @challenge.challenge_type %></span></p>
          <p class="mb-2">Activity Type: <span class="badge"><%= @challenge.activity_type %></span></p>
          <%# We will need to change Status below to @challenge.status once backend is finished %>
          <p class="mb-2">Status: <span class="badge">Active</span></p>
          <p class="mb-2">Progress: <span class="badge">Late</span></p>
          <p class="mb-2">Distance left: 60km</p>
          <p>Amount: <%= humanized_money_with_symbol(@challenge.price) %></p>

        </div>

        <div class="progress-block challenge-detail-block">
          <p style="text-align: left;">Progress</p>
          <div class="progress mb-2">
            <div class="progress-bar bg-green" role="progressbar" style="width: 50%;" aria-valuenow="25" aria-valuemin="0" aria-valuemax="100">50%</div>
          </div>
          <p style="text-align: left;">Distance</p>
          <div class="progress ">
            <div class="progress-bar bg-danger" role="progressbar" style="width: 25%;" aria-valuenow="25" aria-valuemin="0" aria-valuemax="100">25%</div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <div class="d-flex justify-content-between mt-5">
    <div class="latest-activities-card-show">
      <h6>Activities counted for this challenge:</h6>
      <div style="overflow:scroll; height:200px;">
        <table class="table border-success">
          <thead>
            <tr>
              <th scope="col">Type</th>
              <th scope="col">Date</th>
              <th scope="col">Duration</th>
              <th scope="col">Distance</th>
            </tr>
          </thead>
